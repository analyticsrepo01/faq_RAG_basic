{
  "name": "@genkit-ai/firebase",
  "description": "Genkit AI framework plugin for Firebase including Firestore trace/state store and deployment helpers for Cloud Functions for Firebase.",
  "keywords": [
    "genkit",
    "genkit-plugin",
    "genkit-tracestore",
    "genkit-statestore",
    "genkit-deploy",
    "genkit-flow",
    "firestore",
    "ai",
    "genai",
    "generative-ai"
  ],
  "version": "0.5.2",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/firebase/genkit.git",
    "directory": "js/plugins/firebase"
  },
  "author": "genkit",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.19.2",
    "google-auth-library": "^9.6.3",
    "zod": "^3.22.4",
    "@genkit-ai/ai": "0.5.2",
    "@genkit-ai/flow": "0.5.2",
    "@genkit-ai/core": "0.5.2"
  },
  "peerDependencies": {
    "@google-cloud/firestore": "^7.6.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^4.8.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.0",
    "typescript": "^4.9.0"
  },
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./functions": {
      "require": "./lib/functions.js",
      "import": "./lib/functions.mjs",
      "types": "./lib/functions.d.ts",
      "default": "./lib/functions.js"
    },
    "./functions/experimental": {
      "require": "./lib/experimental.js",
      "import": "./lib/experimental.mjs",
      "types": "./lib/experimental.d.ts",
      "default": "./lib/experimental.js"
    },
    "./auth": {
      "require": "./lib/auth.js",
      "import": "./lib/auth.mjs",
      "types": "./lib/auth.d.ts",
      "default": "./lib/auth.js"
    }
  },
  "typesVersions": {
    "*": {
      "functions": [
        "lib/functions"
      ],
      "functions/experimental": [
        "lib/functions"
      ],
      "auth": [
        "lib/auth"
      ]
    }
  },
  "scripts": {
    "check": "tsc",
    "compile": "tsup-node",
    "build:clean": "rm -rf ./lib",
    "build": "npm-run-all build:clean check compile",
    "build:watch": "tsup-node --watch",
    "test": "node --import tsx --test tests/*_test.ts"
  }
}